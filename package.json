{
  "name": "@jkaramon/react-boilerplate",
  "productName": "jk-react-boilerplate",
  "version": "1.0.0",
  "description": "React boilerplate",
  "repository": {
    "type": "git"
  },
  "scripts": {
    "webpack-stat:dev": "webpack --profile --json > dist/webpack-stats.json && yarn webpack-bundle-analyzer dist/webpack-stats.json",
    "build": "yarn run cross-env APP_ENV=development NODE_ENV=production webpack --color --progress",
    "start": "yarn run cross-env APP_ENV=development NODE_ENV=development webpack-dev-server --color --progress",
    "test:watch": "yarn test --watch",
    "format": "prettier --single-quote --arrow-parens always --write 'src/{**/*,*}.ts*'",
    "lint": "yarn eslint 'src/{**/*,*}.ts*'",
    "test": "yarn jest"
  },
  "author": "Josef Karamon",
  "license": "MIT",
  "devDependencies": {
    "@testing-library/react": "^9.3.2",
    "@types/jest": "^24.0.23",
    "@types/luxon": "^1.15.2",
    "@types/react": "^16.9.9",
    "@types/react-redux": "^7.1.5",
    "@types/react-router-dom": "^5.1.0",
    "@types/styled-components": "^4.1.19",
    "@typescript-eslint/eslint-plugin": "^2.4.0",
    "@typescript-eslint/parser": "^2.9.0",
    "cross-env": "^6.0.3",
    "eslint": "^6.5.1",
    "eslint-config-prettier": "^6.4.0",
    "eslint-plugin-jest": "^23.1.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.16.0",
    "eslint-plugin-react-hooks": "^2.3.0",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^3.1.0",
    "jest": "^24.8.0",
    "lint-staged": "^9.4.3",
    "mini-css-extract-plugin": "^0.8.0",
    "prettier": "^1.18.2",
    "react-test-renderer": "^16.11.0",
    "shx": "^0.3.2",
    "source-map-loader": "^0.2.4",
    "style-loader": "^1.0.1",
    "ts-jest": "^24.2.0",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.5.2",
    "typescript": "^3.6.4",
    "typescript-plugin-styled-components": "^1.4.3",
    "webpack": "^4.29.5",
    "webpack-bundle-analyzer": "^3.6.0",
    "webpack-cli": "^3.3.4",
    "webpack-dev-server": "^3.1.14"
  },
  "dependencies": {
    "@hot-loader/react-dom": "^16.11.0",
    "luxon": "^1.28.1",
    "react": "^16.11.0",
    "react-dom": "^16.11.0",
    "react-hot-loader": "^4.6.5",
    "react-query": "^0.3.8",
    "react-router-dom": "^5.1.2",
    "styled-components": "^4.1.3"
  }
}
